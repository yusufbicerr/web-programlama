
@{
    ViewData["Title"] = "CariGiris";
    Layout = "~/Views/Shared/SeceneklerLayout.cshtml";
}

<div class="login-form login-form-left">
    <div class="agile-row">
        <br />
        <br />
        <h3 style="color: white;margin-top: 0rem; margin-left: 8rem; text-align: center; display: flex; justify-content: center">Cari Giriş Sistemi V1.0</h3>
        <span class="fa fa-lock"></span>
        <div class="clear"></div>
        <div class="login-agileits-top">
            <form method="post" style="margin-left: 0.25rem">
                <input type="email" class="name" name="CariMail" Placeholder="Mail Adresiniz" required="" />
                <input type="password" class="password" name="Sifre" Placeholder="Şifreniz" required="" />
                <input type="submit" value="Geri Dön" style="margin-bottom:10px" onclick="window.location.href = '/Login';">
                <input type="submit" value="Giriş Yap">
            </form>
        </div>
        <div>
            <p style="color:red;font-size:large;margin-top:10px">@TempData["LoginError"]</p>
            <p style="color:green;font-size:large;margin-top:10px">@TempData["SignUpSuccesfully"]</p>
        </div>
    </div>
</div>

