@using WebProje2.Models.Siniflar

@model List<KargoDetay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Takip Kodu : @Html.TextBox("search")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Takip Kodu</th>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>
        @k.TakipKodu
    </td>
    <td>
        @k.Personel
    </td>
    <td>
        @k.Alici
    </td>
    <td>
        @k.Tarih.ToString("dd/MM/yyyy")
    </td>
    <td><a href="/Kargo/KargoDetay/@k.TakipKodu" class="btn btn-success">Detaylar</a></td>
</tr>
    }
</table>
<a href="/Kargo/KargoEkle" class="btn btn-info">Yeni Kargo Girişi</a>

