@using WebProje2.Models.Siniflar

@model List<KargoDetay>

@{
    ViewData["Title"] = "KargoDetay";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
<h2 style="color:darkred">Kargo Detayları</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>Açıklama</th>
        <th>Tarih</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Aciklama</td>
            <td>@x.Tarih</td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/CariPanel/KargoTakip/?search=@ViewBag.takipkodu">Geri Dön</a>


